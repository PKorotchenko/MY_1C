// Добавление поля ввода на сервере
Если Элементы.Найти("НашНужныйЭлмент") = Неопределено Тогда
	
	НовыйЭлемент = Элементы.Добавить("НашНужныйЭлемент", Тип("ПолеФормы"));
	НовыйЭлемент.ПутьКДанным = "Объект.НашНужныйРеквизит";
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.Заголовок = "Наш заголовок";
	
КонецЕсли;
